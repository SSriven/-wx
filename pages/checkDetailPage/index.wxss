/* pages/checkDetailPage/index.wxss */
.photo{
  background: #fff;
  display: flex;
  flex-wrap:  wrap;
  justify-content:flex-start;
}
.photo .img,.photo .add{
  width: 80px;
  height:80px;
  margin:10px;
  overflow: hidden;
  border-radius: 10px;
  position: relative;
}
.photo .img image{
  width: 100%;
  height:100%;
}
.photo .img .close{
  position: absolute;
  top: 0;
  right: 0;
  color: #fff;
  background: rgba(0,0,0,0.35);
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
}
.photo .add{
  background: #eee;
  line-height: 80px;
  text-align: center;
  color:#303133;
}
.back-btn{
  background: #409eff;
  color:#fff;
  margin-top:20px;
  margin-bottom:20px;
}