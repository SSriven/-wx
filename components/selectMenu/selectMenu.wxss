/* components/selectMenu/selectMenu.wxss */

.drawer-container {
  background: #fff;
  position: relative;
}

.drawer-container .tab-content {
  overflow: hidden;
  overflow-y: scroll;
}

.drawer-container .tab-content .collapse-item-content-ul {
  display: flex;
  flex-wrap: wrap;
}

.drawer-container .tab-content .collapse-item-content-ul .collapse-item-content-ul-li {
  /* border: 2px solid #666; */
  flex: 1;
  margin: 10px;
  min-width:60px;
  max-width: 100px;
  background: #eee;
  color:#666;
  text-align: center;
  height:30px;
  line-height: 30px;
  font-size: 12px;
  border-radius: 5px;
}
.drawer-container .tab-content .collapse-item-content-ul .curSubtpClass{
  background: #409eff;
  color: #fff;
}

.drawer-container .drawer-container-btn {
  position: absolute;
  bottom: 0;
  height: 80px;
  width: 100%;
  border-top: 1px solid #f2f6fc;
}

.drawer-container .drawer-container-btn view {
  width: 80px;
  height: 30px;
  float: right;
  color: #fff;
  font-size: 14px;
  font-weight: 500;
  line-height: 30px;
  text-align: center;
}

.drawer-container .drawer-container-btn .reset {
  background: linear-gradient(to right, #88e3fa, #4ac1f8);
  border-radius: 30px 0 0 30px;
  margin: 15px 0 0 0;
}

.drawer-container .drawer-container-btn .confirm {
  background: linear-gradient(to right, #2fa1d6, #0f67c0);
  border-radius: 0 30px 30px 0;
  margin: 15px 15px 0 0;
}
.spin{
  position: absolute;
  left:50%;
  top:50%;
  width:20px;
  height:20px;
  margin-left:-10px;
  margin-top:-10px;
}
