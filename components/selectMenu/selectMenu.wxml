                              <i-collapse-item title="企业A" name="name11">
                                <view slot="content">
                                  <i-cell-group>
                                    <i-cell>职业健康
                                      <i-icon type="right" /></i-cell>
                                    <i-cell>安全管理</i-cell>
                                    <i-cell>特种设备</i-cell>
                                    <i-cell>电气安全</i-cell>
                                    <i-cell>消防</i-cell>
                                  </i-cell-group>
                                </view>
                              </i-collapse-item>
                            </i-collapse>
                          </view>
                        </i-collapse-item>
                      </i-collapse>
                    </view>
                  </i-collapse-item>
                </i-collapse>
              </view>
            </i-collapse-item>
          </i-collapse>
        </view>
      </view>
    </view>


  </view>
</i-drawer>