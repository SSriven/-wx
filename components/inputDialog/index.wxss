/* components/inputDialog/index.wxss */
.mask{
  position: fixed;
  top:0;
  left:0;
  background: rgba(0,0,0,0.5);
  z-index: 999;
}
.mask .mask-title{
  position: absolute;
  top:45%;
  left:50%;
  width: 550rpx;
  min-height:350rpx;
  margin-top:-175rpx;
  margin-left: -275rpx;
  background: #fff;
  border-radius: 30rpx;
  z-index: 999;
}
.mask .dialog-title{
  margin-top:-2rpx;
  width: 100%;
  height:80rpx;
  text-align: center;
  font-size: 44rpx;
  color:#fff;
  /* background: linear-gradient(to right bottom,#50bd99,#49bdba); */
  background:#409eff;
  border-radius: 0;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  line-height: 80rpx;
}
.mask .dialog-btn{
  width: 85%;
  height:100rpx;
  margin:0 auto 20rpx auto;
  
}

.mask .cancel{
  width: 40%;
  float:left;
  font-size: 32rpx;
  /* background: linear-gradient(to right bottom,#c8c8c8,#bdd8ce); */
  /* box-shadow:0 0 10rpx 5rpx rgba(160,160,160,0.2); */
  background:#909399;
  color:#fff;
}
.mask .certain{
  width: 40%;
  float:right;
  font-size: 32rpx;
  background:#409eff;
  color:#fff;
}
.mask input{
  width: 85%;
  height:80rpx;
  margin:30rpx auto;
  border:1px solid #eee;
  border-radius: 10rpx;
  padding-left:20rpx;
}